[global]

chord_timeout = 50
overload_tap_timeout = 300
oneshot_timeout = 500
disable_modifier_guard = 0


[main]

ESC = timeout(overload(fn, esc), 150, layer(fn))
SHIFT = oneshot(shift)
ALTGR = oneshot(altgr)


[fn]
space = M-space

# Left

q = noop
w = home
e = up
r = end
t = insert

a = timeout(overload(leftcontrol, oneshot(leftcontrol)), 150, overload(leftcontrol, leftcontrol))
s = left
d = down
f = right
g = delete

z = timeout(overload(leftcontrol, oneshot(leftcontrol)), 150, overload(leftcontrol, rightcontrol))
x = pause
c = pageup
v = pagedown
b = sysrq

# Right

y = f12
u = f7
i = f8
o = f9
p = oneshot(rightalt)
\ = scrolllock

h = f11
j = f4
k = f5
l = f6
; = oneshot(rightmeta)
' = capslock

n = f10
m = f1
, = f2
. = f3
/ = oneshot(rightcontrol)
