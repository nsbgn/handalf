[global]

chord_timeout = 50
overload_tap_timeout = 300
oneshot_timeout = 500
disable_modifier_guard = 0

[main]
# FN = timeout(overload(fn, oneshot(doubletap)), 150, layer(fn))
FN = timeout(overload(fn, leftmeta), 150, layer(fn))
SHIFT = timeout(overload(shift, esc), 150, layer(shift))
ALTGR = oneshot(altgr)

[doubletap]
FN = timeout(overload(alt, oneshot(tripletap)), 150, layer(alt))

[tripletap:A]
FN = layer(fn)

[fn]
space = M-A-space

# Left

q = noop
w = home
e = up
r = end
t = noop

a = pageup
s = left
d = down
f = right
g = delete

z = oneshot(rightcontrol)
x = pause
c = insert
v = pagedown
b = sysrq

# Right

y = f12
u = f7
i = f8
o = f9
p = noop
\ = scrolllock

h = f11
j = f4
k = f5
l = f6
; = oneshot(leftalt)
' = backspace

n = f10
m = f1
, = f2
. = f3
/ = capslock
