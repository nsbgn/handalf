[global]

chord_timeout = 50
overload_tap_timeout = 300
oneshot_timeout = 500
disable_modifier_guard = 0


[main]

ESC = timeout(overload(escape, esc), 150, layer(escape))
SHIFT = oneshot(shift)
ALTGR = oneshot(altgr)


[escape]
space = space

# Left

q = oneshot(leftalt)
w = home
e = up
r = end
t = pageup

a = oneshot(leftmeta)
s = left
d = down
f = right
g = pagedown

z = oneshot(leftcontrol)
c = insert
v = delete
b = sysrq

# Right

y = f12
u = f7
i = f8
o = f9
p = oneshot(rightalt)
\ = scrolllock

h = f11
j = f4
k = f5
l = f6
; = oneshot(rightmeta)
' = capslock

n = f10
m = f1
, = f2
. = f3
/ = oneshot(rightcontrol)
